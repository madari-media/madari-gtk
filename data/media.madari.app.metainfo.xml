<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>media.madari.app</id>
  <name>Madari</name>
  <summary>A GTK4 Media Application with Stremio integration</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  
  <description>
    <p>
      Madari is a modern GTK4/libadwaita media application that provides
      seamless integration with Stremio addons and Trakt for tracking
      your watch history.
    </p>
    <p>Features:</p>
    <ul>
      <li>Modern GTK4/libadwaita interface</li>
      <li>Stremio addon support</li>
      <li>Trakt integration for watch history</li>
      <li>MPV-based video playback</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">media.madari.app.desktop</launchable>
  
  <url type="homepage">https://github.com/madari-media/madari-gtk</url>
  <url type="bugtracker">https://github.com/madari-media/madari-gtk/issues</url>
  
  <developer id="media.madari">
    <name>Madari Developers</name>
  </developer>
  
  <provides>
    <binary>madari</binary>
  </provides>
  
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
  </recommends>
  
  <content_rating type="oars-1.1" />
  
  <releases>
    <release version="0.1.0" date="2024-01-01">
      <description>
        <p>Initial release</p>
      </description>
    </release>
  </releases>
</component>
