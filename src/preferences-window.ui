<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="MadariPreferencesWindow" parent="AdwWindow">
    <property name="title" translatable="yes">Preferences</property>
    <property name="default-width">600</property>
    <property name="default-height">500</property>
    <property name="modal">true</property>
    
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="show-start-title-buttons">false</property>
            <property name="show-end-title-buttons">true</property>
          </object>
        </child>
        <property name="content">
          <object class="AdwViewStack" id="view_stack">
            <!-- Addons Page -->
            <child>
              <object class="AdwViewStackPage">
                <property name="name">addons</property>
                <property name="title" translatable="yes">Addons</property>
                <property name="icon-name">application-x-addon-symbolic</property>
                <property name="child">
                  <object class="AdwPreferencesPage" id="addons_page">
                    <!-- Installed Addons Group -->
                    <child>
                      <object class="AdwPreferencesGroup" id="installed_addons_group">
                        <property name="title" translatable="yes">Installed Addons</property>
                        <property name="description" translatable="yes">Manage your Stremio addons</property>
                        
                        <property name="header-suffix">
                          <object class="GtkButton" id="add_addon_button">
                            <property name="icon-name">list-add-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Add Addon</property>
                            <property name="valign">center</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </property>
                        
                        <child>
                          <object class="GtkListBox" id="addons_list">
                            <property name="selection-mode">none</property>
                            <style>
                              <class name="boxed-list"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    
                    <!-- About Addons Info -->
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">About Addons</property>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">What are Stremio Addons?</property>
                            <property name="subtitle" translatable="yes">Stremio addons provide catalogs of content, streams, metadata, and subtitles. You can find addons at the Stremio addon catalog or install them from any URL.</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            
            <!-- General Settings Page -->
            <child>
              <object class="AdwViewStackPage">
                <property name="name">general</property>
                <property name="title" translatable="yes">General</property>
                <property name="icon-name">preferences-system-symbolic</property>
                <property name="child">
                  <object class="AdwPreferencesPage">
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Appearance</property>
                        
                        <child>
                          <object class="AdwComboRow">
                            <property name="title" translatable="yes">Color Scheme</property>
                            <property name="subtitle" translatable="yes">Choose the application color scheme</property>
                            <property name="model">
                              <object class="GtkStringList">
                                <items>
                                  <item translatable="yes">System</item>
                                  <item translatable="yes">Light</item>
                                  <item translatable="yes">Dark</item>
                                </items>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </child>
                    
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Playback</property>
                        
                        <child>
                          <object class="AdwSwitchRow">
                            <property name="title" translatable="yes">Autoplay Next Episode</property>
                            <property name="subtitle" translatable="yes">Automatically play the next episode in a series</property>
                          </object>
                        </child>
                        
                        <child>
                          <object class="AdwSwitchRow">
                            <property name="title" translatable="yes">Remember Position</property>
                            <property name="subtitle" translatable="yes">Resume playback from where you left off</property>
                            <property name="active">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
        <child type="bottom">
          <object class="AdwViewSwitcherBar">
            <property name="stack">view_stack</property>
            <property name="reveal">true</property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
